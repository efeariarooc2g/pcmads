CREATE VIEW [dbo].[PCMADS_ACTIVITYDRIVER]
AS
SELECT        dbo.PP_ACTIVITYDRIVER.MODELID, dbo.PP_ACTIVITYDRIVER.ID, dbo.PP_ACTIVITYDRIVER_NAME.NAME
FROM            dbo.PP_ACTIVITYDRIVER INNER JOIN
                         dbo.PP_ACTIVITYDRIVER_NAME ON dbo.PP_ACTIVITYDRIVER.MODELID = dbo.PP_ACTIVITYDRIVER_NAME.MODELID AND dbo.PP_ACTIVITYDRIVER.ID = dbo.PP_ACTIVITYDRIVER_NAME.ID
WHERE        (dbo.PP_ACTIVITYDRIVER.ATTRIBUTEINFO = 'N') AND (dbo.PP_ACTIVITYDRIVER.CHILDSORT <> 0) AND (dbo.PP_ACTIVITYDRIVER.MODELID = @MODELID)
